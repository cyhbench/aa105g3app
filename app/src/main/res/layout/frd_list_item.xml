<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_frd_list_mem_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/new_logo3"
            android:layout_marginLeft="2dp"
            android:layout_gravity="left|top"/>

        <!--<TextView-->
            <!--android:id="@+id/tv_frd_list_mem_no"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="會員編號"-->
            <!--android:textColor="@color/colorTextDeep"-->
            <!--android:layout_toRightOf="@+id/iv_frd_list_mem_image"-->
            <!--android:textSize="@dimen/abc_text_size_subhead_material" />-->

        <!--android:layout_below="@+id/tv_frd_list_mem_no"-->
        <TextView
            android:id="@+id/tv_frd_list_friend_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:text="好友編號"
            android:textColor="@color/colorTextDeep"
            android:layout_toRightOf="@+id/iv_frd_list_mem_image"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_frd_list_friend_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="好友申請況態"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/bt_frd_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_frd_list_friend_chk"
            android:text="chkbt"
            android:padding="0px"
            android:layout_margin="0px"
            android:onClick="onFrdChk"
            android:layout_below="@+id/tv_frd_list_friend_chk"
            android:visibility="gone"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>