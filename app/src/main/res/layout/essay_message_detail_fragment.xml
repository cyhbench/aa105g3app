<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvSpot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="12dp">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="iii.myrecyclerview.MainActivity">

        <ImageView
            android:id="@+id/ivMemPic"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:src="@drawable/new_logo3" />

        <TextView
            android:id="@+id/tvMem_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/ivMemPic"
            android:text="Mem no"
            android:textColor="#0000FF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvEsamsg_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tvMem_no"
            android:layout_toRightOf="@+id/ivMemPic"
            android:text="esamsg detail"
            android:textColor="#0000FF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvEsamsg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEsamsg_detail"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/ivMemPic"
            android:text="esamsg date"
            android:textColor="#555555"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>