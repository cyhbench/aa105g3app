                <!--android:text="菜單"/>-->

            <!--<TextView-->
                <!--android:id="@+id/tv_browse_chef_chef_intr"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="簡介"-->
                <!--android:layout_toLeftOf="@+id/tv_browse_recipe_add_in_coll"/>-->

            <TextView
                android:id="@+id/tv_browse_recipe_add_in_coll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"/>
            <!--android:text=" (長按加入收藏)"-->

            <!--<ImageView-->
                <!--android:id="@+id/browser_chef_add_collection"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/like_red"-->
                <!--android:visibility="gone"/>-->
