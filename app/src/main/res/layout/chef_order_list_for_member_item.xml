                <!--android:id="@+id/browser_chef_remove_from_collection"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/like_black"/>-->

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>